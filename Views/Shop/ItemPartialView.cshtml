@model IEnumerable<QanShop.Models.Domains.Product>
<link href="~/css/shop.css" rel="stylesheet" />
@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="card mb-4 product-wap rounded-0">
            <div class="card rounded-0">
                <img class="card-img rounded-0 img-fluid" src="@item.ImageUrl">
                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                    <ul class="list-unstyled">
                        <li><a class="btn btn-success text-white" href="#"><i class="far fa-heart"></i></a></li>
                        <li><a class="btn btn-success text-white mt-2" href="@item.Id"><i class="far fa-eye"></i></a></li>
                        <li><a class="btn btn-success text-white mt-2" href="#"><i class="fas fa-cart-plus"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <a href="#" class="h3 text-decoration-none">@item.Name</a>
                <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                    <li>M/L/X/XL</li>
                </ul>
                <p class="text-center mb-0">@item.price VND</p>
            </div>
        </div>
    </div>
}
