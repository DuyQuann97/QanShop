@model IEnumerable<QanShop.Models.Domains.Product>
@{
    ViewData["Title"] = "Home Page";
}
@* Slider *@
<article>    
    <div id="carousePosterlControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/img/main/anhbanthan_desktop_58b0ff7d673b425eb5e50d947089786a_2048x2048.webp" class="d-block w-100" alt="poster" />
        </div>
        <div class="carousel-item">
          <img src="/img/main/icon105_new_desktop_c27f0f7d49bc4daaa3bdad20598c0498_2048x2048.jpg" class="d-block w-100" alt="poster" />
        </div>
        <div class="carousel-item">
          <img src="/img/main/vitri_3_desktop_e26431edb5b541b6bb4c2ee4a58815e3_2048x2048.webp" class="d-block w-100" alt="poster" />
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carousePosterlControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carousePosterlControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
</article>

@* Hàng mới *@
<article>
    <h4>Hàng mới</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <vc:item-card product=@item/>
