                </div>
            </div> *@
        }
    </div>

</article>

@* Áo Nam *@
<article>
    <h4>Áo Nam</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            if (item.CategoryId.ToString() == "c3db2a52-7b83-4b61-8863-f42d8a06d389")
            {
                <vc:item-card product=@item />
            }

        }
    </div>
</article>

@* Quần Nam *@
<article>
    <h4>Quần Nam</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            if (item.CategoryId.ToString().ToUpper() == "A54129B6-D73D-4511-BF00-8AB5EA586E5F")
            {
                <vc:item-card product=@item />
            }
        }
    </div>
</article>
