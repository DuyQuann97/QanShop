<!-- Edit Product Modal -->
<div class="modal fade" id="editProductModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="productModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productLabel">Edit Product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="ProductId" value="" hidden>
                <div class="mb-3">
                    <label for="editProductName" class="col-form-label">Product Name</label>
                    <input type="text" class="form-control" id="editProductName" value="" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="editProductPrice" class="col-form-labe">Price</label>
                    <input type="number" class="form-control" id="editProductPrice" value="" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="imageUrl" class="col-form-labe">Image Url</label>
                    <input type="text" class="form-control" id="editProductImageUrl" value="" placeholder="">
                    
                </div>
                <div class="mb-3">
                    <label class="col-form-labe">Category</label>
                    <select class="form-select" id="editProductCategoryID" aria-label="categoryID">
                        <option selected value="a54129b6-d73d-4511-bf00-8ab5ea586e5f">Trouser</option>
                        <option value="c3db2a52-7b83-4b61-8863-f42d8a06d389">Shirt</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="description" class="col-form-labe">Description</label>
                    <textarea class="form-control" id="editProductDescription" value="" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="EditBtn" type="button" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>