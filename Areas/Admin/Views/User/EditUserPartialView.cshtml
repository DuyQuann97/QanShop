<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="userModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userLabel">Edit User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="userId" value="" placeholder="" hidden>
                <div class="mb-3">
                    <label for="editUserName" class="col-form-label">User Name</label>
                    <input type="text" class="form-control" id="editUserName" value="" placeholder="" disabled>
                </div>
                <div class="mb-3">
                    <label for="editUserPassword" class="col-form-labe">PassWord</label>
                    <input type="password" class="form-control" id="editUserPassword" value="" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="editUserFirstName" class="col-form-labe">First Name</label>
                    <input type="text" class="form-control" id="editUserFirstName" value="" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="editUserLastName" class="col-form-labe">Last Name</label>
                    <input type="text" class="form-control" id="editUserLastName" value="" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="editUserEmail" class="col-form-labe">Email</label>
                    <input type="email" class="form-control" id="editUserEmail" value="" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="editUserAddDress" class="col-form-labe">Address</label>
                    <input type="text" class="form-control" id="editUserAddDress" value="" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="editUserTelephone" class="col-form-labe">Telephone</label>
                    <input type="number" class="form-control" id="editUserTelephone" value="" placeholder="">
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="EditUserBtn" type="button" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>